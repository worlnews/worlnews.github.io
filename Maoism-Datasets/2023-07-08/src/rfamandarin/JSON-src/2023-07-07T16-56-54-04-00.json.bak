ta[\"language\"],\n                    \"language_service\": utag_data[\"language_service\"],\n                    \"short_language_service\":utag_data[\"short_language_service\"],\n                    \"platform\": utag_data[\"platform\"],\n                    \"platform_short\": utag_data[\"platform_short\"],\n                    \"entity\": utag_data[\"entity\"],\n                    \"property_name\": utag_data[\"\"],\n                    \"property_id\": utag_data[\"property_id\"],\n                    \"page_type\": utag_data[\"page_type\"],\n                    \"subcontent_type\": utag_data[\"\"],\n                    \"enviro_type\": utag_data[\"tealium_environment\"],\n                    \"template\": utag_data[\"template\"],\n                    \"slug\": utag_data[\"slug\"],\n                    \"tags\": utag_data[\"tags\"],\n                    \"pub_hour\":utag_data[\"pub_hour\"],\n                           };\n                utag.link(data);\n            };\n</script>\n<script>\n $(window).load(function(){\n              $('.storyaudio .play').attr(\"onclick\",'eventer(\\\".play\\\")');\n            });\n</script>\n<p>\n \u4e2d\u56fd\u90e8\u5206\u5730\u533a\u56e0\u4e3a\u5f02\u5e38\u9ad8\u6e29\u5bfc\u81f4\u6709\u4eba\u5458\u6b7b\u4ea1\uff0c\u5168\u56fd\u5404\u5730\u57ce\u5e02\u5468\u4e94\uff087\u65e5\uff09\u7eb7\u7eb7\u5f00\u653e\u9632\u7a7a\u6d1e\uff0c\u4e3a\u5c45\u6c11\u63d0\u4f9b\u964d\u6e29\u907f\u6691\u7684\u573a\u6240\u3002\n</p>\n<p>\n \u4e2d\u56fd\u5317\u65b9\u5730\u533a\u6b63\u7ecf\u5386\u8fde\u7eed\u51e0\u5929\u7684\u521b\u7eaa\u5f55\u9ad8\u6e29\uff0c\u5e76\u4f34\u968f\u7740\u5e72\u65f1\u3002\u636e\u56fd\u5bb6\u6c14\u5019\u4e2d\u5fc3\u7684\u6570\u636e\uff0c\u672c\u5468\u65e9\u4e9b\u65f6\u5019\uff0c\u5317\u4eac\u8fde\u7eed\u4e5d\u5929\u51fa\u73b035\u6444\u6c0f\u5ea6\u4ee5\u4e0a\u7684\u9ad8\u6e29\uff0c\u8fd9\u662f\u81ea1961\u5e74\u4ee5\u6765\u7684\u65b0\u7eaa\u5f55\u3002\n</p>\n<p>\n \u636e\u7f8e\u8054\u793e\u62a5\u9053\uff0c\u4e2d\u56fd\u4e1c\u90e8\u6cbf\u6d77\u7684\u676d\u5dde\u3001\u4e2d\u90e8\u5730\u533a\u7684\u6b66\u6c49\u4ee5\u53ca\u90bb\u8fd1\u5317\u4eac\u7684\u6cb3\u5317\u7701\u77f3\u5bb6\u5e84\u5728\u8fc7\u53bb\u4e00\u5468\u5185\u5747\u5ba3\u5e03\u5411\u5c45\u6c11\u5f00\u653e\u9632\u7a7a\u6d1e\uff0c\u4ee5\u9003\u907f\u9177\u6691\u3002\n</p>\n<p>\n \u5f53\u5c40\u5df2\u53d1\u5e03\u5065\u5eb7\u8b66\u62a5\uff0c\u5e76\u5728\u9996\u90fd\u53ca\u5176\u4ed6\u5730\u65b9\u6682\u505c\u6237\u5916\u5de5\u4f5c\u3002\n</p>\n<p>\n \u5230\u76ee\u524d\u4e3a\u6b62\uff0c\u5317\u4eac\u5df2\u6709\u4e24\u4eba\u6b7b\u4e8e\u708e\u70ed\u5929\u6c14\u3002\u536b\u751f\u5f53\u5c40\u8868\u793a\uff0c\u4e0a\u5468\u65e5\uff0c\u4e00\u540d\u5bfc\u6e38\u5728\u9890\u548c\u56ed\u5bfc\u89c8\u671f\u95f4\u4e2d\u6691\u6655\u5012\u5e76\u4e27\u751f\u3002\u4e0a\u4e2a\u6708\uff0c\u5317\u4eac\u8fd8\u6709\u4e00\u540d\u5987\u5973\u56e0\u4e2d\u6691\u800c\u6b7b\u4ea1\u3002\n</p>\n<p>\n \u676d\u5dde\u5e02\u76f8\u90bb\u7684\u7ecd\u5174\u5e02\u536b\u751f\u90e8\u95e8\u5468\u56db\u8868\u793a\uff0c\u4ed6\u4eec\u8bb0\u5f55\u5230\u7531\u9ad8\u6e29\u5f15\u8d77\u7684\u6b7b\u4ea1\u6848\u4f8b\uff0c\u4f46\u6ca1\u6709\u5177\u4f53\u63d0\u4f9b\u4efb\u4f55\u7ec6\u8282\u3002\n</p>\n<p>\n \u5929\u6c14\u90e8\u95e8\u5468\u56db\u8fd8\u53d1\u51fa\u8b66\u544a\uff0c\u79f0\u4e2d\u56fd\u5317\u65b9\u5730\u533a\u4e25\u91cd\u5e72\u65f1\u5a01\u80c1\u5230\u519c\u4f5c\u7269\uff0c\u5e76\u5bf9\u8d1f\u8377\u8fc7\u5ea6\u7684\u7535\u7f51\u9020\u6210\u538b\u529b\u3002\u4e0e\u6b64\u540c\u65f6\uff0c\u4e2d\u56fd\u5357\u65b9\u5730\u533a\u8fd1\u51e0\u5468\u906d\u53d7\u4e86\u5927\u89c4\u6a21\u6d2a\u6c34\u707e\u5bb3\uff0c\u5bfc\u81f4\u6570\u5343\u4eba\u6d41\u79bb\u5931\u6240\u3002\n</p>\n<p>\n \u4e2d\u592e\u6c14\u8c61\u53f07\u65e5\u665a6\u70b9\u7ee7\u7eed\u53d1\u5e03\u9ad8\u6e29\u6a59\u8272\u9884\u8b66\uff0c\u9884\u8ba17\u67088\u65e5\u767d\u5929\uff0c\u534e\u5317\u5927\u90e8\u3001\u9ec4\u6dee\u3001\u6c5f\u5357\u5927\u90e8\u3001\u534e\u5357\u4ee5\u53ca\u56db\u5ddd\u76c6\u5730\u7b49\u591a\u5730\u670935\u2103\u4ee5\u4e0a\u7684\u9ad8\u6e29\u5929\u6c14\uff0c\u5176\u4e2d\uff0c\u6cb3\u5317\u5357\u90e8\u3001\u6cb3\u5357\u5317\u90e8\u3001\u5c71\u4e1c\u897f\u5317\u90e8\u7b49\u5c40\u5730\u53ef\u8fbe40\u2103\u4ee5\u4e0a\u3002\n</p>\n<p>\n \u8d23\u7f16\uff1a\u51ef\u8fea\n</p>", "images": ["https://www.rfa.org/mandarin/Xinwen/10-07072023165128.html/@@images/4d95a6c7-571b-4562-a0f1-9b0608570c89.jpeg"], "imagesn": ["000000.png"]}