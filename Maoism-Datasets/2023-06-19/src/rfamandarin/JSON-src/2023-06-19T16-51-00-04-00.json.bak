                   \"byline\": utag_data[\"byline\"],\n                    \"pub_date\": [utag_data[\"pub_month\"], utag_data[\"pub_day\"], utag_data[\"pub_year\"]].join('/'),\n                    \"language\": utag_data[\"language\"],\n                    \"language_service\": utag_data[\"language_service\"],\n                    \"short_language_service\":utag_data[\"short_language_service\"],\n                    \"platform\": utag_data[\"platform\"],\n                    \"platform_short\": utag_data[\"platform_short\"],\n                    \"entity\": utag_data[\"entity\"],\n                    \"property_name\": utag_data[\"\"],\n                    \"property_id\": utag_data[\"property_id\"],\n                    \"page_type\": utag_data[\"page_type\"],\n                    \"subcontent_type\": utag_data[\"\"],\n                    \"enviro_type\": utag_data[\"tealium_environment\"],\n                    \"template\": utag_data[\"template\"],\n                    \"slug\": utag_data[\"slug\"],\n                    \"tags\": utag_data[\"tags\"],\n                    \"pub_hour\":utag_data[\"pub_hour\"],\n                           };\n                utag.link(data);\n            };\n</script>\n<script>\n $(window).load(function(){\n              $('.storyaudio .play').attr(\"onclick\",'eventer(\\\".play\\\")');\n            });\n</script>\n<p>\n \u7ef4\u6743\u7f516\u670819\u65e5\u53d1\u5e03\u4e2d\u56fd\u4eba\u6743\u5f8b\u5e08\u56e2\u58f0\u660e\uff0c\u8c34\u8d23\u5f53\u5c40\u9488\u5bf9\u4eba\u6743\u5f8b\u5e08\u3001\u4eba\u6743\u634d\u536b\u8005\u3001\u5f02\u8bae\u4eba\u58eb\u7fa4\u4f53\u7684\u9a71\u9010\u3001\u9a9a\u6270\u4e8b\u4ef6\u3002\n</p>\n<p>\n \u58f0\u660e\u6307\u51fa\uff0c\u6700\u8fd1\u51e0\u4e2a\u6708\u4ee5\u6765\uff0c\u4e2d\u56fd\u5f53\u5c40\u9488\u5bf9\u4eba\u6743\u5f8b\u5e08\u674e\u548c\u5e73\u5bb6\u5ead\u3001\u738b\u5168\u748b\u5bb6\u5ead\u3001\u5305\u9f99\u519b\u5bb6\u5ead\u7b49\u4e0d\u540c\u7a0b\u5ea6\u7684\u9a9a\u6270\uff0c\u662f\u5176\u65b0\u7684\u6253\u538b\u624b\u6bb5 -- \u8ba9\u4ed6\u4eec\u5bb6\u5ead\u5c45\u65e0\u5b9a\u6240\uff0c\u591c\u4e0d\u80fd\u5bd0\uff0c\u98df\u4e0d\u5b89\u5b81\uff0c\u65e0\u6cd5\u8c0b\u751f\u3002\u5176\u4e2d\uff0c\u9664\u4e86\u5bf9\u4eba\u6743\u5f8b\u5e08\u4f59\u6587\u751f\u4e0e\u5176\u59bb\u5b50\u8bb8\u8273\u8fdb\u884c\u6293\u6355\uff0c\u5bf9\u4ed6\u4eec\u521a\u6ee118\u5c81\u7684\u5b69\u5b50\u8fdb\u884c\u76d1\u63a7\u3001\u8f6f\u7981\u5916\uff0c\u5f53\u5c40\u5bf9\u4eba\u6743\u5f8b\u5e08\u674e\u548c\u5e73\u3001\u738b\u5168\u748b\u7684\u9a71\u9010\u3001\u8feb\u5bb3\u4e5f\u5ef6\u4f38\u5230\u6574\u4e2a\u5bb6\u5ead\uff0c\u5305\u62ec\u7684\u624b\u6bb5\u6709\u903c\u623f\u4e1c\u6495\u6bc1\u5408\u540c\uff0c\u5165\u5ba4\u9a71\u8d76\uff0c\u9020\u5047\u8bc1\u636e\uff0c\u7838\u7a97\u6237\uff0c\u65ad\u6c34\uff0c\u65ad\u7535\uff0c\u80f6\u6c34\u5835\u9501\u773c\uff0c\u62c6\u5bb6\u95e8\uff0c\u5835\u95e8\u53e3\uff0c\u52a8\u66b4\u529b\uff0c\u62a5\u5047\u6848\uff0c\u8ba9\u7269\u4e1a\u4f5c\u5047\uff0c\u7528\u6d41\u6c13\u5730\u75de\u800d\u65e0\u8d56\uff0c\u5229\u7528\u9ed1\u793e\u4f1a\u9a9a\u6270\uff0c\u4e3a\u514d\u6076\u884c\u88ab\u62cd\u4e0b\u7ed9\u95e8\u773c\u55b7\u6f06\uff0c\u53d8\u76f8\u9650\u5236\u4eba\u8eab\u81ea\u7531\u5c06\u4ed6\u4eec\u56f4\u56f0\u5728\u5bb6\uff0c\u4ee5\u53ca\u5506\u4f7f\u672a\u6210\u5e74\u5c11\u5e74\u4e0a\u95e8\u9a9a\u6270\u7b49\u3002\n</p>\n<p>\n \u58f0\u660e\u6307\u51fa\uff0c\u4e00\u4e2a\u5802\u5802\u5927\u56fd\u7adf\u7136\u5bb9\u4e0d\u4e0b\u51e0\u4e2a\u4eba\u6743\u5f8b\u5e08\uff0c\u5bb9\u4e0d\u4e0b\u51e0\u4e2a\u4e0d\u540c\u7684\u58f0\u97f3\uff0c\u8fd9\u518d\u6b21\u8ba9\u5168\u4e16\u754c\u770b\u5230\u4e86\u4e2d\u56fd\u5927\u9646\u793e\u4f1a\u7ee7\u7eed\u5728\u5168\u65b9\u4f4d\u5730\u8d70\u5411\u5012\u9000\uff1b\u518d\u6b21\u8ba9\u4e16\u4eba\u770b\u5230\u4e86\u4e2d\u56fd\u5927\u9646\u7684\u4eba\u6743\u72b6\u51b5\u5728\u6301\u7eed\u6076\u5316\uff1b\u518d\u6b21\u8ba9\u4e2d\u56fd\u5927\u9646\u7684\u771f\u5b9e\u9762\u8c8c\u5728\u5168\u4e16\u754c\u9762\u524d\u88f8\u5954\u3002\n</p>\n<p>\n \u58f0\u660e\u6566\u4fc3\u4e2d\u56fd\u5f53\u5c40\u4f9d\u6cd5\u843d\u5b9e\u4e0e\u4fdd\u8bc1\u300a\u6c11\u6cd5\u5178\u300b\u7684\u5b9e\u65bd\uff0c\u7acb\u5373\u505c\u6b62\u4e00\u5207\u62b9\u9ed1\u3001\u8df5\u8e0f\u300a\u6c11\u6cd5\u5178\u300b\u5b9e\u65bd\u7684\u4e11\u6076\u3001\u8fdd\u6cd5\u7684\u884c\u5f84\uff1b\u7acb\u5373\u4f9d\u6cd5\u8ffd\u7a76\u76f8\u5173\u8fdd\u6cd5\u72af\u7f6a\u4eba\u5458\u201c\u975e\u6cd5\u4fb5\u5165\u4f4f\u5b85\u7f6a\u201d\u7684\u5211\u4e8b\u8d23\u4efb\uff1b\u5c65\u884c\u6cd5\u5b9a\u4e49\u52a1\uff0c\u4fdd\u969c\u56fd\u9645\u6cd5\u3001\u5baa\u6cd5\u3001\u6cd5\u5f8b\u89c4\u5b9a\u7684\u516c\u6c11\u4f4f\u5b85\u6743\u7b49\uff0c\u8fd8\u6c11\u4f17\u5b89\u5c45\u4e50\u4e1a\u7684\u6743\u5229\u3002\n</p>\n<p>\n \u8d23\u7f16\uff1a\u4f55\u5e73\n</p>", "images": ["https://www.rfa.org/mandarin/Xinwen/8-06192023165053.html/@@images/267321c2-1cfa-4e45-89e5-ec261cd79c87.png"], "imagesn": ["000000.png"]}