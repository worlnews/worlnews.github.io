            \"byline\": utag_data[\"byline\"],\n                    \"pub_date\": [utag_data[\"pub_month\"], utag_data[\"pub_day\"], utag_data[\"pub_year\"]].join('/'),\n                    \"language\": utag_data[\"language\"],\n                    \"language_service\": utag_data[\"language_service\"],\n                    \"short_language_service\":utag_data[\"short_language_service\"],\n                    \"platform\": utag_data[\"platform\"],\n                    \"platform_short\": utag_data[\"platform_short\"],\n                    \"entity\": utag_data[\"entity\"],\n                    \"property_name\": utag_data[\"\"],\n                    \"property_id\": utag_data[\"property_id\"],\n                    \"page_type\": utag_data[\"page_type\"],\n                    \"subcontent_type\": utag_data[\"\"],\n                    \"enviro_type\": utag_data[\"tealium_environment\"],\n                    \"template\": utag_data[\"template\"],\n                    \"slug\": utag_data[\"slug\"],\n                    \"tags\": utag_data[\"tags\"],\n                    \"pub_hour\":utag_data[\"pub_hour\"],\n                           };\n                utag.link(data);\n            };\n</script>\n<script>\n $(window).load(function(){\n              $('.storyaudio .play').attr(\"onclick\",'eventer(\\\".play\\\")');\n            });\n</script>\n<p>\n \u9488\u5bf9\u4e2d\u56fd\u6cd5\u9662\u5ba3\u5224\u7f8e\u7c4d\u6e2f\u4eba\u6881\u6210\u8fd0\u72af\u95f4\u8c0d\u7f6a\u4e00\u6848\uff0c\u7f8e\u56fd\u56fd\u52a1\u9662\u9996\u5e2d\u526f\u53d1\u8a00\u4eba\u97e6\u4e39\u7279\u00b7\u5e15\u7279\u5c14\uff08Vedant Patel\uff09\u5468\u4e00\u8868\u793a\uff0c\u5df2\u7ecf\u6ce8\u610f\u5230\u5bf9\u6881\u6210\u8fd0\u5728\u4e2d\u56fd\u88ab\u4ee5\u95f4\u8c0d\u7f6a\u5ba3\u5224\u3002\u5bf9\u4e8e\u88ab\u62d8\u7559\u5728\u6d77\u5916\u7684\u7f8e\u56fd\u516c\u6c11\uff0c\u7f8e\u56fd\u56fd\u52a1\u9662\u5728\u52aa\u529b\u63d0\u4f9b\u4e00\u5207\u9002\u5f53\u7684\u534f\u52a9\uff0c\u5305\u62ec\u76f8\u5173\u7684\u9886\u4e8b\u63a2\u89c6\u3002\u5bf9\u56fd\u52a1\u9662\u6765\u8bf4\uff0c\u6ca1\u6709\u6bd4\u7f8e\u56fd\u516c\u6c11\u7684\u5b89\u5168\u66f4\u91cd\u8981\u7684\u4f18\u5148\u4e8b\u9879\uff0c\u4f46\u51fa\u4e8e\u9690\u79c1\u539f\u56e0\uff0c\u4ed6\u65e0\u6cd5\u63d0\u4f9b\u66f4\u591a\u8be6\u8bf7\u3002\n</p>\n<p>\n \u5bf9\u4e8e\u8bb0\u8005\u63d0\u95ee\u8be5\u6848\u4ef6\u662f\u5426\u6d89\u53ca\u9519\u8bef\u62d8\u7559\u65f6\uff0c\u5e15\u7279\u5c14\u8bf4\uff0c\u4ece\u5e7f\u4e49\u4e0a\u8bb2\uff0c\u5173\u4e8e\u9519\u8bef\u62d8\u7559\u7684\u8ba4\u5b9a\u5de5\u4f5c\u662f\u9700\u8981\u4e00\u4e2a\u5ba1\u8bae\u8fc7\u7a0b\u3002\u4ed6\u6ca1\u6709\u4efb\u4f55\u65b0\u7684\u9519\u8bef\u62d8\u7559\u8ba4\u5b9a\u53ef\u4ee5\u63d0\u4f9b\u3002\n</p>\n<p>\n \u636e\u672c\u53f0\u7a0d\u65e9\u62a5\u9053\uff0c\u4e2d\u56fd\u6c5f\u82cf\u7701\u82cf\u5dde\u5e02\u4e2d\u7ea7\u4eba\u6c11\u6cd5\u9662\u5468\u4e00\uff0815\u65e5\uff09\u5ba3\u5224\uff0c\u6301\u6709\u7f8e\u56fd\u62a4\u7167\u548c\u9999\u6e2f\u6c38\u4e45\u5c45\u6c11\u8eab\u4efd\u768478\u5c81\u7537\u5b50\u6881\u6210\u8fd0\uff0c\u56e0\u95f4\u8c0d\u7f6a\u6210\uff0c\u88ab\u5224\u65e0\u671f\u5f92\u5211\uff0c\u5265\u593a\u653f\u6cbb\u6743\u5229\u7ec8\u8eab\uff0c\u6ca1\u6536\u4e2a\u4eba\u8d22\u4ea7\u4eba\u6c11\u5e0150\u4e07\u5143\u3002\n</p>\n<p>\n \u4e2d\u56fd\u7684\u5b98\u65b9\u901a\u62a5\u900f\u9732\uff0c\u6881\u6210\u8fd0\u56e0\u6d89\u5acc\u4ece\u4e8b\u95f4\u8c0d\u6d3b\u52a8\uff0c\u4e8e2021\u5e744\u670815\u65e5\u5373\u88ab\u6c5f\u82cf\u7701\u82cf\u5dde\u5e02\u56fd\u5bb6\u5b89\u5168\u5c40\u91c7\u53d6\u5f3a\u5236\u63aa\u65bd\uff0c\u5e76\u8fdb\u884c\u4f9d\u6cd5\u5ba1\u7406\uff0c\u6848\u4ef6\u7ecf\u8fc72\u5e74\u591a\uff0c\u5468\u4e00\u624d\u5b8c\u6210\u4e00\u5ba1\u5ba3\u5224\u3002\n</p>\n<p>\n \u7f51\u4e0a\u8d44\u6599\u663e\u793a\uff0c\u6881\u6210\u8fd0\u662f\u7f8e\u4e2d\u53cb\u597d\u4fc3\u8fdb\u4f1a\u4f1a\u957f\uff0c\u8be5\u4f1a\u66fe\u57282020\u5e74\u300a\u6e2f\u533a\u56fd\u5b89\u6cd5\u300b\u5b9e\u65bd\u540e\uff0c\u53d1\u8868\u652f\u6301\u7acb\u6cd5\u58f0\u660e\u3002\u4ed6\u8fd8\u5728\u4f11\u65af\u987f\u5357\u4eac\u53cb\u597d\u534f\u4f1a\u7b49\u591a\u4e2a\u7f8e\u4fa8\u56e2\u4f53\u4e2d\u62c5\u4efb\u804c\u52a1\uff0c\u7ecf\u5e38\u51fa\u5e2d\u5f53\u5730\u7684\u4eb2\u4e2d\u6d3b\u52a8\u3002\u4ed6\u66fe\u4e0e\u591a\u4f4d\u4e2d\u5171\u9ad8\u5c42\u53ca\u653f\u754c\u540d\u4eba\u540c\u573a\u5408\u5f71\uff0c\u5305\u62ec\u524d\u4e2d\u56fd\u5916\u4ea4\u90e8\u957f\u6768\u6d01\u7bea\u3002\n</p>\n<p>\n \u8d23\u7f16\uff1a\u51ef\u8fea\n</p>", "images": ["https://www.rfa.org/mandarin/Xinwen/6-05152023151813.html/@@images/822382b0-17f9-43d7-9d69-39f4c83d288b.png"], "imagesn": ["000000.png"]}