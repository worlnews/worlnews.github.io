ce\": utag_data[\"language_service\"],\n                    \"short_language_service\":utag_data[\"short_language_service\"],\n                    \"platform\": utag_data[\"platform\"],\n                    \"platform_short\": utag_data[\"platform_short\"],\n                    \"entity\": utag_data[\"entity\"],\n                    \"property_name\": utag_data[\"\"],\n                    \"property_id\": utag_data[\"property_id\"],\n                    \"page_type\": utag_data[\"page_type\"],\n                    \"subcontent_type\": utag_data[\"\"],\n                    \"enviro_type\": utag_data[\"tealium_environment\"],\n                    \"template\": utag_data[\"template\"],\n                    \"slug\": utag_data[\"slug\"],\n                    \"tags\": utag_data[\"tags\"],\n                    \"pub_hour\":utag_data[\"pub_hour\"],\n                           };\n                utag.link(data);\n            };\n</script>\n<a href=\"https://www.rfa.org/mandarin/pinglun/huping/hp-06292023125311.html/@@stream\">\n Audio-1-Link\uff1ahttps://www.rfa.org/mandarin/pinglun/huping/hp-06292023125311.html/@@stream\n</a>\n<script>\n $(window).load(function(){\n              $('.storyaudio .play').attr(\"onclick\",'eventer(\\\".play\\\")');\n            });\n</script>\n<p>\n \u51e0\u5929\u524d\uff0c\u7f51\u4e0a\u6d41\u4f20\u4e00\u6bb5\u636e\u8bf4\u662f\u4e2d\u5171\u5916\u4ea4\u90e8\u957f\u79e6\u521a\u5185\u90e8\u8bb2\u8bdd\u7684\u5f55\u97f3\u3002\u8bb2\u8bdd\u5185\u5bb9\u662f\u4e2d\u7f8e\u4e24\u56fd\u4e89\u7aef\uff0c\u4e2d\u7f8e\u5fc5\u6709\u4e00\u6218\u3002\u81ea\u7531\u4e9a\u6d32\u7535\u53f0\u7684\u4e9a\u6d32\u4e8b\u5b9e\u6838\u67e5\u5b9e\u9a8c\u5ba4\u7ecf\u8fc7\u8ba4\u771f\u6838\u67e5\u6307\u51fa\uff0c\u8fd9\u6bb5\u8bb2\u8bdd\u5e76\u975e\u51fa\u81ea\u79e6\u521a\u4e4b\u53e3\uff0c\u662f\u6709\u4eba\u5047\u5192\u7684\u3002\u8fd9\u6bb5\u5f55\u97f3\u662f\u5047\u7684\uff0c\u4e0d\u8fc7\u5b83\u8bb2\u5230\u7684\u95ee\u9898\u2014\u2014\u4e2d\u7f8e\u662f\u5426\u5fc5\u6709\u4e00\u6218\u2014\u2014\u5012\u786e\u5b9e\u662f\u4e00\u4e2a\u8fd1\u4e9b\u5e74\u6765\u5f88\u70ed\u95e8\u7684\u95ee\u9898\uff0c\u503c\u5f97\u6211\u4eec\u8ba4\u771f\u8c08\u4e00\u8c08\u3002\n</p>\n<p>\n</p>\n<p>\n 5\u670830\u65e5\uff0c\u4e60\u8fd1\u5e73\u5728\u56fd\u5bb6\u5b89\u5168\u59d4\u5458\u4f1a\u7684\u4f1a\u8bae\u4e0a\uff0c\u7b2c\u4e00\u6b21\u63d0\u51fa\u4e86\u201c\u6781\u9650\u601d\u7ef4\u201d\u8fd9\u4e00\u6982\u5ff5\u3002\u6309\u7167\u4e2d\u5171\u515a\u5a92\u300a\u5b66\u4e60\u65f6\u62a5\u300b\u7684\u8bf4\u6cd5\uff0c\u201c\u6781\u9650\u601d\u7ef4\u5c31\u662f\u628a\u6240\u7814\u7a76\u7684\u95ee\u9898\u6216\u4e8b\u7269\u63a8\u81f3\u6781\u9650\u72b6\u6001\u4e0b\u8fdb\u884c\u601d\u8003\u7684\u4e00\u79cd\u601d\u7ef4\u65b9\u6cd5\u3002\u8bf4\u767d\u4e86\uff0c\u5c31\u662f\u5728\u51fa\u73b0\u6781\u7aef\u60c5\u51b5\u65f6\uff0c\u8be5\u600e\u4e48\u529e\u3001\u80fd\u600e\u4e48\u529e\uff1f\u201d\u7528\u901a\u4fd7\u7684\u8bdd\u8bf4\u5c31\u662f\uff0c\u4e0d\u6015\u4e00\u4e07\uff0c\u53ea\u6015\u4e07\u4e00\u3002\u6709\u7684\u4e8b\uff0c\u53d1\u751f\u7684\u53ef\u80fd\u6027\u5e76\u4e0d\u5927\uff0c\u4f46\u662f\u4e00\u65e6\u53d1\u751f\u5c31\u4e0d\u5f97\u4e86\uff0c\u6240\u4ee5\u5fc5\u987b\u505a\u597d\u51c6\u5907\uff0c\u4ee5\u9632\u4e07\u4e00\uff0c\u4ee5\u9632\u4e07\u4e00\u7684\u610f\u601d\u662f\u9632\u6b62\u8fd9\u79cd\u4e8b\u60c5\u53d1\u751f\uff0c\u5982\u679c\u53d1\u751f\u4e86\u80fd\u591f\u5f88\u597d\u5730\u5e94\u5bf9\u3002\n</p>\n<p>\n</p>\n<p>\n \u6781\u9650\u601d\u7ef4\u5e76\u4e0d\u662f\u5355\u6307\u5bf9\u81ea\u5df1\u4e0d\u5229\u7684\u574f\u7684\u6781\u7aef\u60c5\u51b5\uff0c\u4e5f\u53ef\u4ee5\u6307\u4e3b\u52a8\u51fa\u51fb\uff0c\u521b\u9020\u51fa\u5bf9\u81ea\u5df1\u6709\u5229\u7684\u597d\u7684\u6781\u7aef\u60c5\u51b5\uff0c\u6bd4\u5982\u4e2d\u5171\u60f3\u7edf\u4e00\u53f0\u6e7e\uff0c\u4f46\u662f\u603b\u7edf\u4e00\u4e0d\u4e86\uff0c\u800c\u7edf\u4e00\u4e0d\u4e86\u4e5f\u662f\u56e0\u4e3a\u81ea\u5df1\u6ca1\u6709\u4f7f\u51fa\u6781\u7aef\u624b\u6bb5\uff0c\u6ca1\u6562\u4f7f\u7528\u6b66\u529b\uff0c\u987e\u8651\u8fd9\u4e2a\u987e\u8651\u90a3\u4e2a\uff0c\u4e0d\u6562\u8c41\u51fa\u53bb\u4e0d\u60dc\u4e00\u5207\u4ee3\u4ef7\u593a\u53d6\u53f0\u6e7e\uff0c\u6781\u9650\u601d\u7ef4\u5c31\u662f\u8ba4\u771f\u51c6\u5907\u6253\u4ed7\u6253\u53f0\u6e7e\uff0c\u4e0d\u60dc\u5192\u548c\u7f8e\u56fd\u5f00\u6218\u7684\u98ce\u9669\uff0c\u4e0d\u60dc\u5192\u6253\u6838\u6218\u4e89\u7684\u98ce\u9669\u3002\u8fd9\u4e5f\u662f\u6781\u9650\u601d\u7ef4\u3002\n</p>\n<p>\n</p>\n<p>\n \u8bb0\u5f97\u65e9\u57282005\u5e74\uff0c\u4e2d\u56fd\u56fd\u9632\u5927\u5b66\u6559\u6388\u6731\u6210\u864e\u5c11\u5c06\u5c31\u8bb2\u8fc7\u4e00\u6bb5\u72e0\u8bdd\u3002\u6731\u6210\u864e\u8bf4\uff1a\u201c\u5982\u679c\u7f8e\u56fd\u51b3\u5b9a\u5e72\u9884\u4e24\u5cb8\u4e4b\u95f4\u7684\u6c96\u7a81\uff0c\u4e2d\u65b9\u5c06\u575a\u51b3\u4f5c\u51fa\u56de\u5e94\u2026\u2026\u4e2d\u56fd\u5c06\u4e3a\u897f\u5b89\u4ee5\u4e1c\u7684\u6240\u6709\u57ce\u5e02\u906d\u5230\u7834\u574f\u505a\u597d\u51c6\u5907\u2026\u2026\u5f53\u7136\uff0c\u7f8e\u56fd\u4e5f\u5fc5\u987b\u505a\u597d\u51c6\u5907\uff0c\u7f8e\u56fd\u897f\u5cb8\u4e00\u767e\u591a\u4e2a\u6216\u4e8c\u767e\u591a\u4e2a\u3001\u751a\u81f3\u66f4\u591a\u7684\u57ce\u5e02\u53ef\u80fd\u88ab\u4e2d\u56fd\u6467\u6bc1\u3002\u201d\u4e0d\u4e45\u524d\uff0c\u56fd\u9632\u5927\u5b66\u53e6\u4e00\u4f4d\u6559\u6388\u623f\u5175\u4e5f\u8bb2\u8fc7\u7c7b\u4f3c\u7684\u8bdd\u3002\u623f\u5175\u8bf4\uff1a\u201c\u6211\u4eec\u53ef\u4ee5\u62ff\u51fa200\u4e2a\u57ce\u5e02\u4e0d\u8981\u4e86\uff0c\u548c\u7f8e\u56fd\u73a9\uff0c\u4e00\u8d77\u56de\u5230\u77f3\u5668\u65f6\u4ee3\uff0c\u4ed6\u4eec\u6562\u5417\uff1f\u201d\u8fd9\u4f4d\u623f\u5175\u6559\u6388\u65e9\u5148\u8fd8\u53d1\u8868\u8fc7\u4e00\u6b21\u8bb2\u8bdd\uff0c\u5f88\u8c26\u865a\u5730\u627f\u8ba4\u5728\u77ed\u671f\u5185\uff0c\u4e2d\u56fd\u6d77\u519b\u786c\u5b9e\u529b\u4e0d\u53ef\u80fd\u8d85\u8d8a\u7f8e\u56fd\u6d77\u519b\u3002\u623f\u5175\u8bf4\uff1a\u201c\u5982\u679c\u4f60\u8bf4\u8fd9\u4e2a\u65f6\u95f4\u662f100\u5e74\u3001200\u5e74\uff0c\u90a3\u53ef\u80fd\u5c31\u662f\u4e2a\u65f6\u95f4\u7684\u95ee\u9898\uff0c\u5982\u679c\u4f60\u8bf4\u8fd9\u4e2a\u65f6\u95f4\u662f10\u5e74\u300120\u5e74\uff0c\u90a3\u7eaf\u7cb9\u778e\u626f\u3002\u201d\n</p>\n<p>\n</p>\n<p>\n \u623f\u5175\u548c\u6731\u6210\u864e\u7684\u8bb2\u8bdd\u770b\u4e0a\u53bb\u5f88\u5947\u602a\uff1a\u4e00\u65b9\u9762\uff0c\u4ed6\u4eec\u90fd\u627f\u8ba4\uff0c\u4e2d\u56fd\u7684\u519b\u529b\u8fd8\u6bd4\u4e0d\u4e0a\u7f8e\u56fd\uff1b\u4e00\u65e6\u4e2d\u7f8e\u5f00\u6218\uff0c\u4e2d\u56fd\u7684\u635f\u5931\u6bd4\u7f8e\u56fd\u5927\u5f97\u591a\u3002\u4f46\u53e6\u4e00\u65b9\u9762\uff0c\u4ed6\u4eec\u53c8\u90fd\u6446\u51fa\u548c\u7f8e\u56fd\u4e0d\u60dc\u4e00\u6218\u7684\u67b6\u52bf\uff0c\u8fd8\u663e\u5f97\u5f88\u6709\u5e95\u6c14\u3002\u5176\u4e2d\u7684\u5965\u5999\u5c31\u5728\u4e8e\uff0c\u4e2d\u56fd\u653f\u5e9c\u662f\u4e13\u5236\u653f\u5e9c\uff0c\u4e2d\u56fd\u653f\u5e9c\u4e0d\u662f\u4eba\u6c11\u9009\u7684\uff0c\u4e2d\u56fd\u653f\u5e9c\u4f5c\u51b3\u7b56\u6839\u672c\u7528\u4e0d\u7740\u8003\u8651\u6c11\u610f\uff0c\u4e2d\u56fd\u653f\u5e9c\u53ef\u4ee5\u4e0d\u987e\u4e2d\u56fd\u8001\u767e\u59d3\u7684\u6b7b\u6d3b\uff0c\u53eb\u4f60\u6b7b\u6ca1\u5546\u91cf\u3002\u6240\u4ee5\u4e2d\u56fd\u653f\u5e9c\u6709\u6043\u65e0\u6050\u3002\u7f8e\u56fd\u5219\u4e0d\u7136\u3002\u7f8e\u56fd\u662f\u6c11\u4e3b\u56fd\u5bb6\uff0c\u4e00\u65e6\u7f8e\u56fd\u4eba\u6c11\u610f\u8bc6\u5230\uff0c\u5982\u679c\u7f8e\u56fd\u4ecb\u5165\u53f0\u6d77\u6218\u4e8b\u5c31\u4f1a\u6328\u4e2d\u56fd\u7684\u539f\u5b50\u5f39\uff0c\u5c31\u4f1a\u88ab\u6bc1\u6389\u4e00\u4e24\u767e\u4e2a\u57ce\u5e02\uff0c\u4ed6\u4eec\u8fd8\u4f1a\u540c\u610f\u8ba9\u653f\u5e9c\u53bb\u4ecb\u5165\u5417\uff1f\u5982\u6b64\u8bf4\u6765\uff0c\u4e2d\u5171\u5c82\u4e0d\u662f\u53ef\u4ee5\u201c\u4e0d\u6218\u800c\u5c48\u4eba\u4e4b\u5175\u201d\u4e86\u5417\uff1f\n</p>\n<p>\n</p>\n<p>\n \u5728\u8fd9\u91cc\uff0c\u6211\u4eec\u5fc5\u987b\u5f7b\u5e95\u63ed\u9732\u4e2d\u5171\u8fd9\u5957\u6838\u8bb9\u8bc8\u5fc3\u7406\u6218\u6240\u5305\u85cf\u7684\u5de8\u5927\u7978\u5fc3\uff0c\u90a3\u5c31\u662f\u5b83\u89c6\u4eba\u547d\u3001\u9996\u5148\u662f\u89c6\u672c\u56fd\u6c11\u4f17\u7684\u4eba\u547d\u4e3a\u8349\u82a5\u3002\u4e2d\u5171\u6253\u53f0\u6e7e\u7684\u7406\u7531\u65e0\u975e\u662f\u4e3a\u4e86\u56fd\u5bb6\u7684\u7edf\u4e00\u3002\u4f46\u662f\u56fd\u5bb6\u7edf\u4e00\u7684\u76ee\u7684\u539f\u672c\u5e94\u8be5\u662f\u4e3a\u4e86\u4eba\u6c11\u7684\u5e78\u798f\u3002\u5982\u679c\u4f60\u7684\u7edf\u4e00\u7adf\u7136\u662f\u6bc1\u706d\u4ebf\u4e07\u4eba\u6c11\uff0c\u800c\u4e14\u6bc1\u706d\u7684\u9996\u5148\u7684\u548c\u4e3b\u8981\u8fd8\u662f\u4e2d\u56fd\u4eba\u6c11\uff0c\u8fd9\u6837\u7684\u7edf\u4e00\u8fd8\u6709\u4ec0\u4e48\u6b63\u5f53\u6027\u5462\uff1f\u5982\u679c\u4e2d\u5171\u771f\u7684\u60f3\u7edf\u4e00\uff0c\u5b83\u5c31\u5e94\u8be5\u6539\u53d8\u81ea\u5df1\uff0c\u8ba9\u81ea\u5df1\u53d8\u5f97\u6709\u5438\u5f15\u529b\uff0c\u4ece\u800c\u4f7f\u5f97\u53f0\u6e7e\u4eba\u6c11\u613f\u610f\u7edf\u4e00\uff1b\u50cf\u73b0\u5728\u8fd9\u6837\u4ee5\u6b66\u529b\u76f8\u5a01\u80c1\uff0c\u628a\u4ebf\u4e07\u4e2d\u56fd\u4eba\u6c11\u7684\u751f\u547d\u4e3a\u7b79\u7801\uff0c\u8fd9\u662f\u6211\u4eec\u5fc5\u987b\u53cd\u5bf9\u7684\uff0c\u4e5f\u662f\u5168\u4e16\u754c\u4e00\u5207\u7231\u597d\u548c\u5e73\u3001\u73cd\u89c6\u751f\u547d\u7684\u4eba\u90fd\u5fc5\u987b\u53cd\u5bf9\u7684\u3002\n</p>\n<p>\n</p>\n<p>\n \uff08\u6587\u7ae0\u53ea\u4ee3\u8868\u7279\u7ea6\u8bc4\u8bba\u5458\u4e2a\u4eba\u7684\u7acb\u573a\u548c\u89c2\u70b9\uff09\n</p>", "images": ["https://www.rfa.org/mandarin/pinglun/huping/hp-06292023125311.html/@@images/9157dab1-d90e-42e5-8dbc-63b7f33d931c.jpeg"], "imagesn": ["000000.png"]}